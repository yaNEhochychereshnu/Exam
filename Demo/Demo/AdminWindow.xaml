<Window x:Class="Demo.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Администратор" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel>
            <Button Click="ManageStaffButton_Click" Content="Управление сотрудниками" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" Padding="10" Width="200" Background="LightYellow"/>
            <Button Click="ManageOrdersButton_Click" Content="Управление заказами" HorizontalAlignment="Center" Margin="10"  VerticalAlignment="Center" Padding="10" Width="200" Background="LightYellow"/>
            <Button Click="ManageShiftsButton_Click" Content="Управление сменами" HorizontalAlignment="Center" Margin="10"  VerticalAlignment="Center" Padding="10" Width="200" Background="LightYellow"/>
            <Button Click="ExitButton_Click" Content="Выйти" HorizontalAlignment="Center" Margin="10"  VerticalAlignment="Center" Width="200" Padding="10" Background="IndianRed"/>
        </StackPanel>
    </Grid>
</Window>
