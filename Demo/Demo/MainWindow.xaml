<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Авторизация" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel>
            <Label>Логин:</Label>
            <TextBox x:Name="UsernameTextBox" Padding="5" Margin="10" Width="200"/>
            <Label>Пароль:</Label>
            <PasswordBox x:Name="PasswordTextBox" Padding="5" Margin="10" Width="200"/>
            <Button Content="Войти" Click="LoginButton_Click" HorizontalAlignment="Center" Margin="10"  VerticalAlignment="Center" Width="200" Padding="10" Background="LightYellow"/>
        </StackPanel>
    </Grid>
</Window>
